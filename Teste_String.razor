@page "/testestring"

<h3 class="text-center">Teste String</h3>
<br/>

<table class="table">
	<tr>
		<td><button @onclick = "testarMatriz" class="btn btn-outline-primary"> Testar String como Matriz</button></td>
		<td><button @onclick = "testarBusca" class="btn btn-outline-primary">Testar Busca</button></td>
	</tr>
	<tr> 
		<td><button @onclick = "testarInsercao" class="btn btn-outline-primary">Testar Inserção</button></td>
		<td><button @onclick = "testarRemocao" class="btn btn-outline-primary">Testar Remoção</button></td>
	</tr>
	<tr>
		<td><button @onclick="testarSubstituicao" class="btn btn-outline-primary">Testar Substituição</button></td>
		<td><button @onclick="testarConcatenacao" class="btn btn-outline-primary">Testar Concatenação</button></td>
	</tr>
	<tr>
		<td><button @onclick="testarInterpolacao" class="btn btn-outline-primary">Testar Interpolação</button></td>
		<td></td>
	</tr>
</table>

<div class="p-3">
	<label>Veja o resultado dos testes no console do navegador. Para ativá-lo, pressione <b>F12/</b>. </label>
</div>

@code 
{
	void testarMatriz()
	{
		string nome = "ABCDE";
		string resultado = "";

		for(int i = 0; i < nome.Length; i++)
		{
			char caractere = nome[i];
			caractere++;
			resultado = resultado + Convert.ToString(caractere);
		}
		Console.WriteLine(resultado);
	}

	void testarBusca()
	{
		string verso = "No meio do caminho";

		int p1 = verso.IndexOf("caminho");
		int p2 = verso.IndexOf("pedra");

		Console.WriteLine(p1);
		Console.WriteLine(p2);
	}

	void testarInsercao()
	{
		string mauConselho = "Se você é capaz de sonhar, desista dos seus sonhos";
		string bomConselho = mauConselho.Insert(27, "nunca ");

		Console.WriteLine(mauConselho);
		Console.WriteLine(bomConselho);
	}

	void testarRemocao()
	{
		string mauConselho = "A melhor forma de nunca se frustrar é nunca confiar.";
		string bomConselho = mauConselho.Remove(18, 6);

		Console.WriteLine(mauConselho);
		Console.WriteLine(bomConselho);
	}

	void testarSubstituicao()
	{
		string mauConselho = "Sou incompetente, incompreendido e infeliz";
		string bomConselho = mauConselho.Replace("in", "");

		Console.WriteLine(mauConselho);
		Console.WriteLine(bomConselho);
	}

	void testarConcatenacao()
	{
		string s1 = "Bom ";
		string s2 = "Dia!";
		string s3 = string.Concat(s1, s2);

		Console.WriteLine(s3);
	}

	void testarInterpolacao()
	{
		string nome = "Gustavo";
		int idade = 37;
		string esporte = "andar de Bicicleta";
		string junto;

		junto = $"Meu nome é {nome}, tenho {idade} anos e meu esporte favorito é {esporte}.";

		Console.WriteLine(junto);
	}
}
